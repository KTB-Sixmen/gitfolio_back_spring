FROM amazoncorretto:17 AS runner
WORKDIR /notification
EXPOSE 8080

# 빌더 이미지 참조를 build-arg로 받아옵니다
ARG BUILDER_IMAGE
# 로컬 빌더 이미지에서 파일을 복사합니다
COPY --from=${BUILDER_IMAGE} /gitfolio_back/build/.env .env
COPY --from=${BUILDER_IMAGE} /gitfolio_back/build/*-notification-*-SNAPSHOT.jar notification.jar

CMD [ "java", "-jar", "notification.jar" ]